extends layout

block content
  -data = data || {}

  if errors
    ul.my-errors
      for error in errors
        li= error.msg

  form(action="." method="POST" class="form-registration")
    label(for="name") Nome
    input(
      type="text"
      id="name"
      name="name"
      class="form-control"
      value=data.name
    )

    label(for="email") Email
    input(
      type="email"
      id="email"
      name="email"
      class="form-control"
      value=data.email
    )
    label(for="telefone") Telefone
    input(
      type="phone"
      id="phone"
      name="phone"
      class="form-control"
      value=data.phone
    )

    input(
      type="submit"
      value="Cadastrar"
      class="btn btn-lg btn-primary btn-block"
    )